#!/usr/bin/env zsh

alias ..='cd ..'

# alias d='git diff --word-diff $@'
alias d='git diff'
alias s='git status -sb'
alias a='git add'
alias c='git commit -v'
alias gb='git branch -avv'
alias gs='git switch'
alias g='git'
alias b='bat'

if [[ "$OS" == 'linux' ]]; then
  alias l='ls -l --color --group-directories-first'
  alias ll='l -ah'
else
  if [ -x "$(command -v gls)" ]; then
    alias l='gls -l --color --group-directories-first'
    alias ll='l -ah'
  fi
fi
